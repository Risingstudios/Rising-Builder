{
  "codex_name": "Necrons (My Data)",
  "rules": {
    "Reanimation Protocols": { "summary": "When a model is removed as a casualty, place a counter. At end of phase, roll D6. On 5+, model returns with 1 wound. (See Codex for full modifiers)." },
    "Living Metal": { "summary": "Ignore Crew Shaken and Crew Stunned results on a 2+." },
    "Tesla": { "summary": "To Hit rolls of 6 cause 2 additional hits." },
    "Gauss": { "summary": "To Wound rolls of 6 against vehicles cause a Glancing Hit automatically (unless it would penetrate)." },
    "Entropic Strike": { "summary": "Melee hits that wound (or penetrate) strip Armour Save (or AV) from target for the rest of the game." },
    "Quantum Shielding": { "summary": "Vehicle counts as AV13 Front/Side until it suffers its first penetrating hit." },
    "Mindshackle Scarabs": { "summary": "In assault, enemy model in base contact must pass Ld test on 3d6 or strike their own unit." },
    "Phase Shifter": { "summary": "Model has a 3+ Invulnerable save." },
    "Ever-living": { "summary": "If killed, place a token. On 5+ next turn, returns to play." },
    "Resurrection Orb": { "summary": "Reanimation Protocols passed on 4+ instead of 5+." }
  },
  "wargear": {
    "Warscythe": { "summary": "S+2, AP1, Two-handed. Rolls 2D6 for Armor Pen." },
    "Hyperphase Sword": { "summary": "Power Weapon (AP3)." },
    "Voidblade": { "summary": "Rending, Entropic Strike." },
    "Rod of Covenant": { "summary": "Power Weapon. Shooting: 12\" S8 AP2 Assault 1." },
    "Staff of Light": { "summary": "Power Weapon. Shooting: 12\" S5 AP3 Assault 3." },
    "Dispersion Shield": { "summary": "3+ Invulnerable Save. Can reflect shooting attacks." },
    "Sempiternal Weave": { "summary": "2+ Armor Save." },
    "Phylactery": { "summary": "Once per game, D3 wounds restored." },
